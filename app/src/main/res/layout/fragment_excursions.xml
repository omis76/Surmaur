<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.onkar.surmaur.ExcursionsActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="16dp"
            android:text="Gurudwara Shri Paonta Sahib ji"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:padding="16dp"
            android:text="Mahamaya Balasundari Temple Trilokpur"
            android:textAppearance="?android:textAppearanceMedium" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:padding="16dp"
            android:text="Maa Bhagyani Temple, Haripurdhar"
            android:textAppearance="?android:textAppearanceMedium" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:padding="16dp"
            android:text="Chudeshwar Temple, Churdhar"
            android:textAppearance="?android:textAppearanceMedium" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:padding="16dp"
            android:text="Paudiwala Swarg ki dusri sidhi Temple, Sainwala Nahan"
            android:textAppearance="?android:textAppearanceMedium" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:padding="16dp"
            android:text="Bhureswar Mahadev Temple, Nainatikker"
            android:textAppearance="?android:textAppearanceMedium" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:padding="16dp"
            android:text="Shri Renuka Ji Temple, RenukaJi"
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>
</ScrollView>